{
    "name": "render-crlf",
    "displayName": "Render CRLF",
    "description": "Displays LF/CR/CRLF line ending (aka end-of-line, EOL) symbols when Render whitespace is turned on.",
    "version": "1.3.0",
    "publisher": "medo64",
    "repository": {
        "url": "https://github.com/medo64/render-crlf/"
    },
    "license": "MIT",
    "engines": {
        "vscode": "^1.28.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/extension",
    "contributes": {
        "configuration": [
            {
                "type": "object",
                "title": "Render CRLF",
                "properties": {
                    "code-eol.newlineCharacter": {
                        "description": "Character used to display LF (line-feed) line ending (aka Linux/Mac line ending).",
                        "type": "string",
                        "minLength": 1,
                        "maxLength": 1,
                        "default": "↓"
                    },
                    "code-eol.returnCharacter": {
                        "description": "Character used to display CR (carriage-return) line ending (aka old Macintosh line ending).",
                        "type": "string",
                        "minLength": 1,
                        "maxLength": 1,
                        "default": "←"
                    },
                    "code-eol.crlfCharacter": {
                        "description": "Character used to display CRLF (carriage-return, line-feed) line ending (aka Windows line ending).",
                        "type": "string",
                        "minLength": 1,
                        "maxLength": 2,
                        "default": "↵"
                    },
                    "code-eol.highlightNonDefault": {
                        "type": "boolean",
                        "default": false,
                        "description": "If set, non-default line endings will be hightlighted as errors."
                    }
                }
            }
        ]
    },
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^8.10.40",
        "eslint": "^4.11.0",
        "typescript": "^2.6.1",
        "vscode": "^1.1.30"
    }
}
