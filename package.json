{
    "name": "render-crlf",
    "displayName": "Render CRLF Line Endings",
    "description": "Displays LF/CR/CRLF line endings (aka end-of-line, EOL) symbols when Render whitespace is turned on.",
    "icon": "ICON.png",
    "version": "1.3.3",
    "publisher": "medo64",
    "galleryBanner": {
        "color": "#C80000",
        "theme": "dark"
    },
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/medo64/render-crlf/issues/",
        "email": "jmedved@jmedved.com"
    },
    "homepage": "https://medo64.com/render-crlf/",
    "repository": {
        "url": "https://github.com/medo64/render-crlf/"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "line endings",
        "end-of-line",
        "whitespace",
        "crlf",
        "lf"
    ],
    "engines": {
        "vscode": "^1.31.0"
    },
    "main": "./out/extension",
    "activationEvents": [
        "*"
    ],
    "contributes": {
        "configuration": [
            {
                "type": "object",
                "title": "Render CRLF Line Endings",
                "properties": {
                    "code-eol.newlineCharacter": {
                        "description": "Character used to display LF (line-feed) line ending (aka Linux/Mac line ending).",
                        "type": "string",
                        "minLength": 1,
                        "maxLength": 1,
                        "default": "↓"
                    },
                    "code-eol.returnCharacter": {
                        "description": "Character used to display CR (carriage-return) line ending (aka old Macintosh line ending).",
                        "type": "string",
                        "minLength": 1,
                        "maxLength": 1,
                        "default": "←"
                    },
                    "code-eol.crlfCharacter": {
                        "description": "Character used to display CRLF (carriage-return, line-feed) line ending (aka Windows line ending).",
                        "type": "string",
                        "minLength": 1,
                        "maxLength": 2,
                        "default": "↵"
                    },
                    "code-eol.highlightNonDefault": {
                        "type": "boolean",
                        "default": false,
                        "description": "If set, non-default line endings will be hightlighted as errors."
                    }
                }
            }
        ]
    },
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "dependencies": {
        "vscode": "^1.1.30"
    },
    "devDependencies": {
        "eslint": "^4.19.1",
        "vsce": "^1.50.0"
    }
}
